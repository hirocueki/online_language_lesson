%table.table.table-striped
  %thead
    %tr
      %th 言語
      %th 時間
      %th 講師
      %th

  %tbody
    - lessons.each do |lesson|
      %tr
        %td= lesson.language.name
        %td= l(lesson.start_date, format: :discard_minute)
        %td= lesson.teacher.name

        %td
          = link_to '編集', edit_lesson_path(lesson)
          = link_to '削除', lesson, method: :delete, data: { confirm: 'Are you sure?' }
