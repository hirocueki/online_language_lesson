%h2 #{t('activerecord.model.teacher')}の追加

= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-inputs
    = f.input :name, autofocus: true, autocomplete: "name"
  .form-inputs
    = f.input :email, as: :email, autocomplete: "email"
  .form-inputs
    = f.input :password, as: :password, autocomplete: "new-password", hint: "(#{@minimum_password_length} 文字以上)" if @minimum_password_length
  .form-inputs
    = f.input :password_confirmation, as: :password, autocomplete: "new-password"
  .form-actions
    = f.submit "作成する", class: 'btn btn-primary'

= link_to 'キャンセル', teachers_path
